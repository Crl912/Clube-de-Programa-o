while(1):
    def jokempo():
        import random

        opcoes = ["papel", "pedra", "tesoura"]
        
        comp = random.randint(0, 2)
        
        escolha = input("jokenpô: ")
        
        if (escolha == 'papel' and opcoes[comp] == 'tesoura') :
            print('voce perdeu')
        if (escolha == 'papel' and opcoes[comp] == 'pedra') :
            print('voce venceu')
        if (escolha == 'papel' and opcoes[comp] == 'papel') : 
            print('empate')
            
            
        if (escolha == 'pedra' and opcoes[comp] == 'papel') :
            print('voce perdeu')
        if (escolha == 'pedra' and opcoes[comp] == 'tesoura') :
            print('voce venceu')
        if (escolha == 'pedra' and opcoes[comp] == 'pedra') : 
            print('empate')
            
        
        if (escolha == 'tesoura' and opcoes[comp] == 'pedra') :
            print('voce perdeu')
        if (escolha == 'tesoura' and opcoes[comp] == 'papel') :
            print('voce venceu')
        if (escolha == 'tesoura' and opcoes[comp] == 'tesoura') : 
            print('empate')
        
        
        if (escolha == 'morango do amor') :
            print('ela é um morango do amor')
            time.sleep(1)
            print('nao ta no menu')
            time.sleep(1)
            print('ela é fofinha e bravinha tipo um labubu')
            time.sleep(2)
            print('ela colore meu mundo tipo um bob goods')
            
            
    def quadrado ():
        lado = int(input('digite o valor do lado: '))
        area = lado * lado 
        return area
        
    def retangulo ():
        lado = int(input('digite o valor do lado: '))
        comprimento = int(input('digite o valor do comprimento: '))
        area = lado * comprimento
        return area
    
    
    def triangulo ():
        base = int(input('digite o valor da base: '))
        altura = int(input('digite o valor da altura: '))
        area = base * altura /2
        return area 
    
    
    def circulo ():
        raio = int(input('digite o valor do raio: '))
        area = 3.14 * (raio **2)
        return area
    
    
    
    def trapezio ():
        base_menor = int(input('digite o valor da base menor: '))
        base_maior = int(input('digite o valor da base maior: '))
        altura = int(input('digite o valor da altura: '))
        area = (base_maior + base_menor) * altura /2 
        return area
    
    
    def menu_area():
        
        escolha2 = input('voce deseja calcular qual forma: ')
        if escolha2 == 'quadrado':
            area = quadrado()
        elif escolha2 == 'retangulo':
            area = retangulo()
        elif escolha2 == 'triangulo':
            area = triangulo()
        elif escolha2 == 'circulo':
            area = circulo()
        elif escolha2 == 'trapezio':
            area = trapezio()
                    
                    
        print(area)
    def menu_jokempo():
        
        escolha1 = input('voce deseja jogar o jokempo ou calcular a area: ')
        if escolha1 == 'area':
            area = menu_area()
        if escolha1 == 'jokempo':
            jokempo = jokempo()
    
    menu_jokempo()
