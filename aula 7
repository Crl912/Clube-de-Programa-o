def jokenpo ():
    print('1=pedra,2=papel,3=tesoura')
    escolha = input('jokempo: ')
    if (escolha == '1 ') :
        print('voce ganhou')
    elif (escolha == '2 ') :
        print('voce ganhou')
    elif (escolha == '3 ') :
        print('voce ganhou')
    elif (escolha == '3') :
        print('voce perdeu')
    elif (escolha == '2') :
        print('voce perdeu')
    elif (escolha == '1') :
        print('voce perdeu')
    else:
        print('invalido')
def quadrado ():
    lado = int(input('digite o valor do lado: '))
    area = lado * lado 
    return area

def retangulo ():
    lado = int(input('digite o valor do lado: '))
    comprimento = int(input('digite o valor do comprimento: '))
    area = lado * comprimento
    return area


def triangulo ():
    base = int(input('digite o valor da base: '))
    altura = int(input('digite o valor da altura: '))
    area = base * altura /2
    return area 


def circulo ():
    raio = int(input('digite o valor do raio: '))
    area = 3.14 * (raio **2)
    return area



def trapezio ():
    base_menor = int(input('digite o valor da base menor: '))
    base_maior = int(input('digite o valor da base maior: '))
    altura = int(input('digite o valor da altura: '))
    area = (base_maior + base_menor) * altura /2 
    return area


